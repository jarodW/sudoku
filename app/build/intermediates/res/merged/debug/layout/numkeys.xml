<?xml version="1.0" encoding="utf-8"?>
<TableLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/numKey"
   android:orientation="vertical"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:stretchColumns="*">
   <TableRow>
      <Button android:id="@+id/numKey_1"
         android:text="1">
      </Button>
      <Button android:id="@+id/numKey_2"
         android:text="2">
      </Button>
      <Button android:id="@+id/numKey_3"
         android:text="3">
      </Button>
   </TableRow>
   <TableRow>
      <Button android:id="@+id/numKey_4"
         android:text="4">
      </Button>
      <Button android:id="@+id/numKey_5"
         android:text="5">
      </Button>
      <Button android:id="@+id/numKey_6"
         android:text="6">
      </Button>
   </TableRow>
   <TableRow>
      <Button android:id="@+id/numKey_7"
         android:text="7">
      </Button>
      <Button android:id="@+id/numKey_8"
         android:text="8">
      </Button>
      <Button android:id="@+id/numKey_9"
         android:text="9">
      </Button>
   </TableRow>
   <TableRow>
      <Button android:id="@+id/numKey_0"
          android:layout_span="3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Clear">
      </Button>
   </TableRow>
</TableLayout>